  {
    "schema": {
      "$schema": "http://json-schema.org/schema#",
      "$id": "http://chharvey.github.io/bangs/global-data.json",
      "description": "Describes JSON data reused throughout the project.",
      "properties": {
        "schema": {
          "description": "The schema object used to validate this object."
        },
        "values": {
          "description": "List of global CSS values supported throughout the project.",
          "type": "array",
          "uniqueItems": true,
          "items": { "allOf": [{ "$ref": "#/definitions/CSS_Value" }] }
        },
        "types": {
          "description": "Value types that different valuesets may share.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Value Type",
            "type": "object",
            "required": ["name", "values"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string", "description": "Name of the value type." },
              "url" : { "type": "string", "description": "Link to an external resource." },
              "values": {
                "description": "List of enumerated, verbatim values for this type.",
                "allOf": [{ "$ref": "#/definitions/CSS_Property/properties/values" }]
              }
            }
          }
        },
        "common_data": {
          "description": "Common values or valuesets used in many CSS properties. Eliminates duplicate code.",
          "type": "object"
        },
        "media": {
          "description": "List of media at-rules supported throughout the project.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Media At-Rule",
            "type": "object",
            "required": ["name", "code", "query"],
            "properties": {
              "name" : { "type": "string", "description": "Identifier/keyword for the at-rule." },
              "code" : { "type": "string", "description": "Code used in Bang classname." },
              "query": { "type": "string", "description": "The query for the at-rule." }
            }
          }
        },
        "pseudo": {
          "description": "List of pseudo-classes supported throughout the project.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": ["name", "code", "selectors"],
            "properties": {
              "name"     : { "type": "string", "description": "Identifier/keyword for the pseudo-class." },
              "code"     : { "type": "string", "description": "Code used in Bang classname." },
              "selectors": {
                "description": "List of selectors supported.",
                "type": "array",
                "uniqueItems": true,
                "items": { "type": "string" }
              }
            }
          }
        },
        "stability_levels": {
          "description": "Describes stability levels of CSS properties and values in the project.",
          "type": "array",
          "uniqueItems": true,
          "items": {
            "title": "Stability Level",
            "type": "object",
            "required": ["name", "description"],
            "properties": {
              "name"       : { "type": "string", "description": "Identifier/keyword for the stability level." },
              "description": { "type": "string", "description": "Description of the stability level." }
            }
          }
        }
      }
    },
    "values": [
      { "name": "inherit", "code": "i" },
      { "name": "initial", "code": "0" },
      { "name": "unset"  , "code": "u" }
    ],
    "types": [
      {
        "name": "<line-width>",
        "url" : "https://developer.mozilla.org/en-US/docs/Web/CSS/length",
        "values": [
          { "name": "1px" , "code": "1"  },
          { "name": "2px" , "code": "2"  },
          { "name": "4px" , "code": "4"  },
          { "name": "8px" , "code": "8"  },
          { "name": "16px", "code": "16" }
        ]
      },
      {
        "name": "<line-style>",
        "values": [
          { "name": "none"   , "code": "n"  },
          { "name": "hidden" , "code": "h"  },
          { "name": "solid"  , "code": "s"  },
          { "name": "dotted" , "code": "do" },
          { "name": "dashed" , "code": "da" },
          { "name": "double" , "code": "db" },
          { "name": "groove" , "code": "gv" },
          { "name": "ridge"  , "code": "rg" },
          { "name": "inset"  , "code": "is" },
          { "name": "outset" , "code": "os" }
        ]
      },
      {
        "name": "<color>",
        "url" : "https://developer.mozilla.org/en-US/docs/Web/CSS/color_value",
        "values": [
          { "name": "transparent" , "code": "t" },
          { "name": "currentColor", "code": "c" },
          { "name": "#000"        , "code": "b" },
          { "name": "#fff"        , "code": "w" }
        ]
      }
    ],
    "common_data": {
      "tracks": [1, 2, 3, 4, 5, 6, 8, 10, 12],
      "spacing": [0.25, 0.5, 1, 2, 4, 8, 16]
    },
    "media": [
      { "name": "small+"  , "code": "sK", "query": "screen  and (min-width: 30em)" },
      { "name": "medium+" , "code": "sM", "query": "screen  and (min-width: 45em)" },
      { "name": "large+"  , "code": "sG", "query": "screen  and (min-width: 60em)" },
      { "name": "xlarge+" , "code": "sT", "query": "screen  and (min-width: 75em)" },
      { "name": "xxlarge+", "code": "sP", "query": "screen  and (min-width: 90em)" },
      { "name": "xsmall-" , "code": "nK", "query": "not all and (min-width: 30em)" },
      { "name": "small-"  , "code": "nM", "query": "not all and (min-width: 45em)" },
      { "name": "medium-" , "code": "nG", "query": "not all and (min-width: 60em)" },
      { "name": "large-"  , "code": "nT", "query": "not all and (min-width: 75em)" },
      { "name": "xlarge-" , "code": "nP", "query": "not all and (min-width: 90em)" }
    ],
    "pseudo": [
      { "name": "hover", "code": "h", "selectors": [":hover", ":focus"] }
    ],
    "stability_levels": [
      { "name": "obsolete"    , "description": "This feature is no longer supported. Do not use it." },
      { "name": "deprecated"  , "description": "Breaking changes are planned for this feature, or it will be removed in future versions. It is no longer in development, and should not be relied upon." },
      { "name": "experimental", "description": "This feature is in development, but is unsupported or subject to change. It could be removed in future versions." },
      { "name": "stable"      , "description": "This feature has been tested and proven satisfactory. It is in development, but no breaking changes will be made unless absolutely necessary." },
      { "name": "locked"      , "description": "Only patches will be made to this feature. It may be heavily relied upon and will not be removed in future versions." }
    ]
  }
