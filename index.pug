        +propertyDoc('background-image')
        +propertyDoc('background-position')
        +propertyDoc('background-size')
        +propertyDoc('background-repeat')
        +propertyDoc('background-attachment')
        +propertyDoc('background-origin')
        +propertyDoc('background-clip')
        +propertyDoc('background-color')
        +propertyDoc('overflow')
        +propertyDoc('opacity')
        +propertyDoc('visibility')
        +propertyDoc('box-shadow')
      section
        h2 Text Cosmetics
        +propertyDoc('color')
        +propertyDoc('text-transform')
