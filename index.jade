doctype html
html
  head
    title Bangs
    meta(charset="utf-8")
    meta(name="author", content="Chris Harvey")
    meta(name="description", content="Bangs are single-responsibility CSS class selectors with exactly one property and marked with !important.")
    link(rel="stylesheet", href="bangs.css")
  body
    main
      section
        h1 _display.less
        div(class="!d:0 ") .!d:0  { display: initial      !important; }
        div(class="!d:i ") .!d:i  { display: inherit      !important; }
        div(class="!d:n ") .!d:n  { display: none         !important; }
        div(class="!d:bk") .!d:bk { display: block        !important; }
        div(class="!d:il") .!d:il { display: inline       !important; }
        div(class="!d:ib") .!d:ib { display: inline-block !important; }
        div(class="!d:tb") .!d:tb { display: table        !important; }
        div(class="!d:tc") .!d:tc { display: table-cell   !important; }
        div(class="!d:fx") .!d:fx { display: flex         !important; }
      section
        h1 _width.less
        div(class="!w:1o1") .!w:1o1 { width: 100% !important; }
        div(class="!w:1o2") .!w:1o2 { width: 50% !important; }
        div(class="!w:2o2") .!w:2o2 { width: 100% !important; }
        div(class="!w:1o3") .!w:1o3 { width: 33.33333333% !important; }
        div(class="!w:2o3") .!w:2o3 { width: 66.66666667% !important; }
        div(class="!w:3o3") .!w:3o3 { width: 100% !important; }
        div(class="!w:1o4") .!w:1o4 { width: 25% !important; }
        div(class="!w:2o4") .!w:2o4 { width: 50% !important; }
        div(class="!w:3o4") .!w:3o4 { width: 75% !important; }
        div(class="!w:4o4") .!w:4o4 { width: 100% !important; }
        div(class="!w:1o5") .!w:1o5 { width: 20% !important; }
        div(class="!w:2o5") .!w:2o5 { width: 40% !important; }
        div(class="!w:3o5") .!w:3o5 { width: 60% !important; }
        div(class="!w:4o5") .!w:4o5 { width: 80% !important; }
        div(class="!w:5o5") .!w:5o5 { width: 100% !important; }
        div(class="!w:1o6") .!w:1o6 { width: 16.66666667% !important; }
        div(class="!w:2o6") .!w:2o6 { width: 33.33333333% !important; }
        div(class="!w:3o6") .!w:3o6 { width: 50% !important; }
        div(class="!w:4o6") .!w:4o6 { width: 66.66666667% !important; }
        div(class="!w:5o6") .!w:5o6 { width: 83.33333333% !important; }
        div(class="!w:6o6") .!w:6o6 { width: 100% !important; }
