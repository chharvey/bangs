section#list-style-image
  h2 _list-style-image.less
  section
    h3 all media queries
    div(class="!d:li !lsi:0")   .!lsi:0   { list-style-image: initial !important; }
    div(class="!d:li !lsi:i")   .!lsi:i   { list-style-image: inherit !important; }
    div(class="!d:li !lsi:n")   .!lsi:n   { list-style-image: none    !important; }
  section
    h3 @media screen
    div(class="!d:li !lsi:0@s") .!lsi:0@s { list-style-image: initial !important; }
    div(class="!d:li !lsi:i@s") .!lsi:i@s { list-style-image: inherit !important; }
    div(class="!d:li !lsi:n@s") .!lsi:n@s { list-style-image: none    !important; }
  section
    h3 @media print
    div(class="!d:li !lsi:0@p") .!lsi:0@p { list-style-image: initial !important; }
    div(class="!d:li !lsi:i@p") .!lsi:i@p { list-style-image: inherit !important; }
    div(class="!d:li !lsi:n@p") .!lsi:n@p { list-style-image: none    !important; }
