section#white-space
  h2 _white-space.less
  section
    h3 all media queries
    div(class="!sp:0 ")   .!sp:0    { white-space: initial  !important; }
    div(class="!sp:i ")   .!sp:i    { white-space: inherit  !important; }
    div(class="!sp:n ")   .!sp:n    { white-space: normal   !important; }
    div(class="!sp:nw")   .!sp:nw   { white-space: nowrap   !important; }
    div(class="!sp:pr")   .!sp:pr   { white-space: pre      !important; }
    div(class="!sp:pw")   .!sp:pw   { white-space: pre-wrap !important; }
    div(class="!sp:pl")   .!sp:pl   { white-space: pre-line !important; }
  section
    h3 @media screen
    div(class="!sp:0@s ") .!sp:0@s  { white-space: initial  !important; }
    div(class="!sp:i@s ") .!sp:i@s  { white-space: inherit  !important; }
    div(class="!sp:n@s ") .!sp:n@s  { white-space: normal   !important; }
    div(class="!sp:nw@s") .!sp:nw@s { white-space: nowrap   !important; }
    div(class="!sp:pr@s") .!sp:pr@s { white-space: pre      !important; }
    div(class="!sp:pw@s") .!sp:pw@s { white-space: pre-wrap !important; }
    div(class="!sp:pl@s") .!sp:pl@s { white-space: pre-line !important; }
  section
    h3 @media print
    div(class="!sp:0@p ") .!sp:0@p  { white-space: initial  !important; }
    div(class="!sp:i@p ") .!sp:i@p  { white-space: inherit  !important; }
    div(class="!sp:n@p ") .!sp:n@p  { white-space: normal   !important; }
    div(class="!sp:nw@p") .!sp:nw@p { white-space: nowrap   !important; }
    div(class="!sp:pr@p") .!sp:pr@p { white-space: pre      !important; }
    div(class="!sp:pw@p") .!sp:pw@p { white-space: pre-wrap !important; }
    div(class="!sp:pl@p") .!sp:pl@p { white-space: pre-line !important; }
