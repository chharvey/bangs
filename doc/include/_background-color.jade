section#background-color
  h2 _background-color.less
  section
    h3 all media queries
    div(class="!bc:0  ")   .!bc:0     { background-color: initial      !important; }
    div(class="!bc:i  ")   .!bc:i     { background-color: inherit      !important; }
    div(class="!bc:t  ")   .!bc:t     { background-color: transparent  !important; }
    div(class="!bc:c  ")   .!bc:c     { background-color: currentColor !important; }
    div(class="!bc:b  ")   .!bc:b     { background-color: #000000      !important; }
    div(class="!bc:w  ")   .!bc:w     { background-color: #ffffff      !important; }
  section
    h3 @media screen
    div(class="!bc:0@s  ") .!bc:0@s   { background-color: initial      !important; }
    div(class="!bc:i@s  ") .!bc:i@s   { background-color: inherit      !important; }
    div(class="!bc:t@s  ") .!bc:t@s   { background-color: transparent  !important; }
    div(class="!bc:c@s  ") .!bc:c@s   { background-color: currentColor !important; }
    div(class="!bc:b@s  ") .!bc:b@s   { background-color: #000000      !important; }
    div(class="!bc:w@s  ") .!bc:w@s   { background-color: #ffffff      !important; }
  section
    h3 @media print
    div(class="!bc:0@p  ") .!bc:0@p   { background-color: initial      !important; }
    div(class="!bc:i@p  ") .!bc:i@p   { background-color: inherit      !important; }
    div(class="!bc:t@p  ") .!bc:t@p   { background-color: transparent  !important; }
    div(class="!bc:c@p  ") .!bc:c@p   { background-color: currentColor !important; }
    div(class="!bc:b@p  ") .!bc:b@p   { background-color: #000000      !important; }
    div(class="!bc:w@p  ") .!bc:w@p   { background-color: #ffffff      !important; }
  section
    h3 pseudo-classes :hover and :focus
    div(class="!bc:0^")    .!bc:0^    { background-color: initial      !important; }
    div(class="!bc:i^")    .!bc:i^    { background-color: inherit      !important; }
    div(class="!bc:t^")    .!bc:t^    { background-color: transparent  !important; }
    div(class="!bc:c^")    .!bc:c^    { background-color: currentColor !important; }
    div(class="!bc:b^")    .!bc:t^    { background-color: #000000      !important; }
    div(class="!bc:w^")    .!bc:c^    { background-color: #ffffff      !important; }
