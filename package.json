{
  "name": "bangs",
  "version": "0.8.0",
  "description": "Bangs are unopinionated, single-responsibility CSS class selectors marked with !important.",
  "main": "bangs.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lessc:bangs": "lessc-each ./src/ ./build/  ;  lessc ./bangs.less ./bangs.css",
    "lessc:all": "npm run lessc:bangs",
    "minify": "cleancss ./bangs.css -o ./bangs.min.css",
    "build": "npm run lessc:all  ;  npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chharvey/bangs.git"
  },
  "keywords": [
    "css",
    "atomic"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/bangs/issues"
  },
  "homepage": "https://github.com/chharvey/bangs/blob/gh-pages/README.md",
  "devDependencies": {
    "clean-css": "^3.4.5",
    "less": "^2.5.3",
    "lessc-each": "^1.0.1",
    "xmeter": "^4.0.0"
  }
}
