{
  "name": "bangs",
  "version": "0.5.0",
  "description": "Bangs are unopinionated, single-responsibility CSS class selectors marked with !important.",
  "main": "bangs.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lessc:all": "lessc-each ./src/ ./build/  ;  lessc ./bangs.less ./bangs.css ; lessc ./doc/styles/index.less ./doc/styles/index.css",
    "minify": "cleancss ./bangs.css -o ./bangs.min.css",
    "jade:index": "jade -P index.jade",
    "build": "npm run lessc:all  ;  npm run minify  ;  npm run jade:index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chharvey/bangs.git"
  },
  "keywords": [
    "css",
    "atomic"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/bangs/issues"
  },
  "homepage": "https://chharvey.github.io/bangs/",
  "devDependencies": {
    "clean-css": "^3.4.5",
    "jade": "^1.11.0",
    "less": "^2.5.3",
    "lessc-each": "^1.0.1",
    "lux-nox": "^1.1.0",
    "xmeter": "^3.3.0"
  }
}
