{
  "name": "bangs",
  "version": "0.12.0",
  "description": "Bangs are unopinionated, single-responsibility CSS class selectors marked with !important.",
  "main": "bangs.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lessc:build": "node src/build.js",
    "lessc:bangs": "lessc bangs.less bangs.css",
    "lessc:docs": "lessc docs/styles/docs.less docs/styles/docs.css",
    "lessc:all": "npm run lessc:build  &&  npm run lessc:bangs  &&  npm run lessc:docs",
    "minify": "cleancss bangs.css -o bangs.min.css",
    "unbuild": "rm docs/{index,props}.html bangs.css bangs.min.css",
    "gulp": "gulp pug:docs",
    "build": "npm run lessc:all  &&  npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chharvey/bangs.git"
  },
  "keywords": [
    "css",
    "atomic"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/bangs/issues"
  },
  "homepage": "http://chharvey.github.io/bangs/",
  "devDependencies": {
    "ajv": "^5.1.3",
    "clean-css-cli": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-pug": "^3.3.0",
    "less": "^2.5.3",
    "sitepage": "^1.0.0",
    "xmeter": "^5.3.1"
  }
}
