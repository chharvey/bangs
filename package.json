{
  "name": "bangs",
  "version": "0.2.2",
  "description": "Bangs are unopinionated, single-responsibility CSS class selectors with exactly one property and marked with !important.",
  "main": "bangs.css",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lessc:all": "lessc-each  ./src/  ./build/  ;  lessc  ./bangs.less  ./bangs.css",
    "minify": "cleancss ./bangs.css -o ./bangs.min.css",
    "jade:index": "jade --pretty index.jade index.html",
    "build": "npm run lessc:all  ;  npm run minify  ;  npm run jade:index"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chharvey/bangs.git"
  },
  "keywords": [
    "css",
    "atomic"
  ],
  "author": "Chris Harvey <chrisharvey2pi@gmail.com> (https://chharvey.github.io/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chharvey/bangs/issues"
  },
  "homepage": "https://github.com/chharvey/bangs#readme",
  "devDependencies": {
    "clean-css": "^3.4.5",
    "lessc-each": "^1.0.1",
    "xmeter": "^2.2.0"
  }
}
